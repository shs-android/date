<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:hint="제목"/>
        <Button
                android:text="달력"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintHorizontal_bias="1.0"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3" android:hint="메모"/>
        <Button
                android:text="색상                                                                                                                 "
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/button4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <Button
                android:text="폰트                                                                                                                "
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <Button
                android:text="첨부파일 추가                                                                                                "
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTintMode="multiply" style="@style/Widget.AppCompat.Button"
                app:layout_constraintHorizontal_bias="0.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>